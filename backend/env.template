FLASK_ENV=development

# PostgreSQL connection string
# Format: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/survey_tracking

# SQLAlchemy connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# CORS origins for frontend access (comma-separated or * for all)
CORS_ORIGINS=*

# Optional: backend port (used by app.py default is 5000)
PORT=5000

# KoboToolbox integration
# Base URL examples:
#   https://kf.kobotoolbox.org       (hosted)
#   https://kc.humanitarianresponse.info  (humanitarian server)
KOBO_BASE_URL=https://kf.kobotoolbox.org
KOBO_TOKEN=your_kobo_api_token_here
KOBO_ASSET_ID=your_form_asset_uid_here

# Field names in Kobo form used to map data
KOBO_REGION_FIELD=region_code
KOBO_INSTITUTION_FIELD=institution_name



