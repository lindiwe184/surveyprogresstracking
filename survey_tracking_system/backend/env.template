# =============================================================================
# Namibia GBV ICT Readiness Survey Tracking System
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
FLASK_ENV=development
# FLASK_ENV=production

# Server port
PORT=5000

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql+psycopg2://user:password@host:port/database
DATABASE_URL=postgresql+psycopg2://survey_user:your_password_here@localhost:5432/survey_tracking

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# -----------------------------------------------------------------------------
# KoBoToolbox API Configuration
# -----------------------------------------------------------------------------
# KoBoToolbox server URL (use kf.kobotoolbox.org for the global server)
# For humanitarian organizations, use kobo.humanitarianresponse.info
KOBO_API_URL=https://kf.kobotoolbox.org

# Your KoBoToolbox API token
# Get this from: KoBoToolbox > Account Settings > Security > API Token
KOBO_API_TOKEN=your_kobo_api_token_here

# Default asset UID for the GBV ICT Readiness survey form
# Get this from the URL when viewing your form: https://kf.kobotoolbox.org/#/forms/ASSET_UID
# KOBO_DEFAULT_ASSET_UID=aXyz123abc...

# -----------------------------------------------------------------------------
# Sync Configuration
# -----------------------------------------------------------------------------
# Auto-sync interval in minutes (0 to disable)
KOBO_SYNC_INTERVAL_MINUTES=30

# Maximum submissions to fetch per sync
KOBO_SYNC_BATCH_SIZE=30000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG